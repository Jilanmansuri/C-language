#include <stdio.h>

int main() {
   int i=1;
    while (i<=n){

         int j=i;
        while(j<n){
           printf(" ");
            j++;
        }

           int k=1;
        while(k<=2*i-1){    
            printf("*");
            k++;
        }
        printf("\n");
        i++;
    }
    
     i=1;
    while(i<n){
        
        int j = 1;
        while(j<=i){
            printf(" ");
            j++;
        }

        int k=i;
        while(k<=2*n-i-2){
            printf("*");
            k++;
        }
        printf("\n");
        i++;
    }
    return 0;
}